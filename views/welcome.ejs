<%- include('partials/header') %>

<div class="flex flex-col items-center justify-center py-12">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Welcome, <%= user.first_name %>!</h1>
        <% if (success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                <%= success %>
            </div>
        <% } %>
        <p class="text-xl text-gray-600">Share your books with others and discover new reads</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl">
        <div class="card">
            <div class="card-header">
                <h2 class="text-xl font-semibold">Share Books</h2>
            </div>
            <div class="card-body">
                <p class="mb-4">Share your books with other users and help spread knowledge.</p>
                <div class="flex justify-center">
                    <i class="fas fa-book text-5xl text-blue-500"></i>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="text-xl font-semibold">Discover</h2>
            </div>
            <div class="card-body">
                <p class="mb-4">Find interesting books shared by other members.</p>
                <div class="flex justify-center">
                    <i class="fas fa-search text-5xl text-green-500"></i>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="text-xl font-semibold">Connect</h2>
            </div>
            <div class="card-body">
                <p class="mb-4">Connect with other book lovers in the community.</p>
                <div class="flex justify-center">
                    <i class="fas fa-users text-5xl text-purple-500"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>